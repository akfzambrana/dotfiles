alias catalogo="cd ~/workspace/vv/vv-jornada-catalogo-ngx"
alias corecss="cd ~/workspace/vv/vv-jornada-core-css"
alias corengx="cd ~/workspace/vv/vv-jornada-core-ngx"
alias home="cd ~/workspace/vv/vv-jornada-home-ngx"
alias atendimento="cd ~/workspace/vv/vv-jornada-atendimento-ngx"
alias catalogoservicos="cd ~/workspace/vv/vv-jornada-catalogo-servicos-ngx"
alias crediario="cd ~/workspace/vv/vv-jornada-crediario-ngx"
alias crm="cd ~/workspace/vv/vv-jornada-crm-ngx"
alias gestaopedidos="cd ~/workspace/vv/vv-jornada-gestao-pedidos-ngx"
alias listacasamento="cd ~/workspace/vv/vv-jornada-lista-casamento-ngx"

alias configuser="git config user.name \"ANDREA KELLEY F ZAMBRANA\" && git config user.name andrea.zambrana@viavarejo.com.br"